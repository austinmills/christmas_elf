<h1>Next Present: <%= @selected.name || "All presents opened!" %>!</h1>
<h1><%= "  JOKER!!" if(Random.new.rand(100) < 11) %></h1>
<h2><%= link_to "Open #{@selected.name}'s Gift!", opened_person_path(@selected) %> </h2>
<br>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Gifts</th>
      <th>Opened</th>
      <th>Complete</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= person.total_gifts %></td>
        <td><%= person.opened %></td>
        <td><%= "#{person.percent_opened.round(1)}%" %></td>
        <td><%= link_to 'Open a Gift!', opened_person_path(person) %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<h2><%= "Opened #{Person.total_all_opened}/#{Person.total_all_gifts}: #{Person.total_percent_opened.round(1)}%" %> </h2>
<br>


<br>
<%= link_to 'Next Present!', :action => :next %>